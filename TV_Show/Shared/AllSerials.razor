@using System.IO;

@if (!IsTable)
{
    <div class="row text-center alert alert-info" style="margin-left:auto; margin-right: auto;">
        <div class="col">
            <p>@Serials.SerialName</p>
            <p>@Serials.ReleaseDate - @Serials.FinishDate</p>
            <p>@Serials.About</p>
        </div>
    </div>
}
else
{
    <tr style="margin-left:auto; margin-right: auto;">
        <td><a href="/@Serials.SerialNameEng.ToString().Replace(" ", "")">@Serials.SerialName</a></td>
        <td>@Serials.ReleaseDate - @Serials.FinishDate</td>
        <td>@Serials.About</td>
    </tr>
}



@code {
    [Parameter] public Serials Serials { get; set; }
    [Parameter] public bool IsTable { get; set; }
    [Parameter] public bool DisplayButtons { get; set; } = false;


