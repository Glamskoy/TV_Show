@using System.IO;

@if (!IsTable)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p>@Serials.SerialName</p>
            <p>@Serials.ReleaseDate - @Serials.FinishDate</p>
            <p>@Serials.SeriesTime</p>
            <p>@Serials.Seasons</p>
            <p>@Serials.About</p>
        </div>
    </div>

    @if (DisplayButtons)
    {
        <div class="row">
            <div class="col offset-3">
                <input type="checkbox" @onchange="FromBlazorToDB" />
            </div>
        </div>
    }
}
else
{
<tr>
    <td><a href="/@Serials.SerialNameEng.ToString().Replace(" ", "")">@Serials.SerialName</a></td>
    <td>@Serials.ReleaseDate - @Serials.FinishDate</td>
    <td>@Serials.SeriesTime</td>
    <td>@Serials.Seasons</td>
    <td>@Serials.About</td>
    <td>
        @if (DisplayButtons)
        {
            <input type="checkbox" @onchange="FromBlazorToDB" />
        }
    </td>
</tr>
}



@code {
    [Parameter] public Serials Serials { get; set; }
    [Parameter] public bool IsTable { get; set; }
    [Parameter] public bool DisplayButtons { get; set; } = false;


    //private void AddToFIle()
    //{
    //    FileInfo newFile = new FileInfo("serials.txt");
    //    newFile.Create();
    //}

    private void FromBlazorToDB()
    {
        Serials.AddSerialsToDb(new Serials(Serials.SerialName, Serials.SerialNameEng, Serials.ReleaseDate, 
            Serials.FinishDate, Serials.SeriesTime, Serials.Seasons, Serials.About));
    }


}
