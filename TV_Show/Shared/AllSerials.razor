    private void FromBlazorToDB()
    {
        Serials.AddSerialsToDb(new Serials(Serials.SerialName, Serials.SerialNameEng, Serials.ReleaseDate, 
            Serials.FinishDate, Serials.SeriesTime, Serials.Seasons, Serials.About));
    }


}
