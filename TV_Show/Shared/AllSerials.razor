@using System.IO;

@if (!IsTable)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p>@Serials.SerialName</p>
            <p>@Serials.Seasons</p>
            <p>@Serials.Year</p>
        </div>
    </div>

    @if (DisplayButtons)
    {
        <div class="row">
            <div class="col offset-3">
                <input type="checkbox" @onchange="FromBlazorToDB" />
            </div>
        </div>
    }
}
else
{
    <tr>
        @if (Serials.SerialName == "Game of Thrones")
        {
            <td><a href="/GameofThrones">@Serials.SerialName</a></td>
            <td>@Serials.Seasons</td>
            <td>@Serials.Year</td>
            <td>
                @if (DisplayButtons)
                {
                    <input type="checkbox" @onchange="FromBlazorToDB" />
                }
            </td>
        }
        @if (Serials.SerialName == "Supernatural")
        {
            <td><a href="/Supernatural">@Serials.SerialName</a></td>
            <td>@Serials.Seasons</td>
            <td>@Serials.Year</td>
            <td>
                @if (DisplayButtons)
                {
                    <input type="checkbox" @onchange="FromBlazorToDB" />
                }
            </td>
        }
        @if (Serials.SerialName == "The Big Bang Theory")
        {
            <td><a href="/TheBigBangTheory">@Serials.SerialName</a></td>
            <td>@Serials.Seasons</td>
            <td>@Serials.Year</td>
            <td>
                @if (DisplayButtons)
                {
                    <input type="checkbox" @onchange="FromBlazorToDB" />
                }
            </td>
        }
    </tr>
}



@code {
    [Parameter] public Serials Serials { get; set; }
    [Parameter] public bool IsTable { get; set; }
    [Parameter] public bool DisplayButtons { get; set; } = false;


    //private void AddToFIle()
    //{
    //    FileInfo newFile = new FileInfo("serials.txt");
    //    newFile.Create();
    //}

    private void FromBlazorToDB()
    {
        Serials.AddSerialsToDb(new Serials(Serials.SerialName, Serials.Seasons, Serials.Year));
    }


}
